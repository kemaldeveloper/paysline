include ./_mixins

header.b-header
  .container
      .row
        .col-xl-3.col.d-flex.align-items-center
          ._logo
            +logo('/')
        .col-6.d-xl-flex.d-none.align-items-center.justify-content-center
          nav.nav.nav-menu
            +navLink('#work', 'How it works')
            +navLink('#calculator', 'Calculator')
            +navLink('#solution', 'User consent')
            +navLink('#about', 'About us')
        .col-xl-3.col.d-flex.align-items-center.justify-content-end
          ._authorization
            .d-xl-block.d-none
              +link('sign-up.html', 'Sign up')
            +button('a', 'Sign in', 'sign-in.html', 'small',)
            .d-xl-none.d-block
              button.hamburger(type='button', data-bs-toggle=`offcanvas` data-bs-target='#offcanvasRight' aria-controls='offcanvasRight')
                .hamburger-box.hamburger-box--black
                  .hamburger-inner 

div.offcanvas.offcanvas-end(tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel")
  div.offcanvas-header.justify-content-between
    .offcanvas-logo
      +logo('/')
    .d-flex.align-items-center
      .me-4
        +button('a', 'Sign in', 'sign-in.html', 'small',)
      .ms-3
        button.hamburger(type='button', data-bs-dismiss="offcanvas" aria-label="Close")
          .hamburger-box.hamburger-box--gray
            .hamburger-inner
  div.offcanvas-body
    .offcanvas-inner.d-flex.flex-column
      +link('sign-up.html', 'Sign up')
      nav.nav.nav-menu.d-inline-flex.flex-column
        a.nav-link(data-href="#work" type="button" data-bs-dismiss="offcanvas" aria-label="Close") How it works
        a.nav-link(data-href="#calculator" type="button" data-bs-dismiss="offcanvas" aria-label="Close") Calculator
        a.nav-link(data-href="#solution" type="button" data-bs-dismiss="offcanvas" aria-label="Close") User consent
        a.nav-link(data-href="#about" type="button" data-bs-dismiss="offcanvas" aria-label="Close") About us